{
    "manifest_version": 2,
  
    "name": "Getting started example",
    "description": "This extension allows the user to change the background color of the current page.",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],

    "background":
    {
        "scripts": ["thirdParty/jquery-3.2.1.slim.min.js", "thirdParty/popper.min.js", "thirdParty/bootstrap.min.js"]
    },

    "content_scripts": 
    [
        {
            "matches":["<all_urls>"],
            "js": ["thirdParty/jquery-3.2.1.slim.min.js", "thirdParty/popper.min.js", "thirdParty/bootstrap.min.js", "content_script.js"]
        }
    ]
  }